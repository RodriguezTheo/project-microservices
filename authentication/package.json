{
  "name": "authentication",
  "version": "0.0.1",
  "description": "Authentication Service - Responsible for authenticating users and providing access tokens",
  "scripts": {
    "start": "NODE_PATH=./build node build/src/server.ts",
    "build": "tsc -p .",
    "dev": "nodemon --legacy-watch --exec ts-node -r tsconfig-paths/register --project tsconfig.json ./src/server.ts",
    "lint": "eslint . --ext .ts"
  },
  "_moduleAliases": {
    "@": "build"
  },
  "author": "Rodriguez Theo",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "@tsconfig/recommended": "^1.0.3",
    "@types/bcrypt": "^5.0.1",
    "@types/cors": "^2.8.15",
    "@types/express": "^4.17.20",
    "@types/node": "^20.8.10",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "eslint": "^8.52.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-prettier": "^5.0.1",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2"
  }
}
