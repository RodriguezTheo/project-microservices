{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "lib": ["ESNext"],
    "moduleResolution": "node",
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "paths": {
      "@/*": ["./src/*"],
      "@/def/*": ["./src/lib/definitions/*"],
      "@/env/*": ["./src/environment/*"],
      "@/test/*": ["./src/__tests__/*"]
    },
    "types": ["@types/jest"]
  },
  "include": ["src/**/*.ts",
    "src/__tests__/**/*.ts", "jest.config.ts"
  ],
  "exclude": ["node_modules"]
}